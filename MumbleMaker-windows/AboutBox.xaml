<Window x:Class="MumbleMaker.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutBox"
        Height="190"
        Width="300"
        MinHeight="10"
        MinWidth="300"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" >
    <StackPanel HorizontalAlignment="Center">
        <TextBlock Text="Mumble Maker" 
                   Margin="0, 10, 0, 0" FontWeight="Bold" FontSize="18"
                   HorizontalAlignment="Center" />
        <TextBlock Text="Version Pre-alpha 1."
                   Margin="0, 10, 0, 0" FontStyle="Italic"
                   HorizontalAlignment="Center" />
        <TextBlock Text="Free opensource dialogue editor."/>
        <TextBlock Text="Copyright 2013 ZeronSix."
                   Margin="0, 30, 0, 0" 
                   HorizontalAlignment="Center" />
        <Button Width="60"
                Margin="0, 5, 0, 0"
                Name="btnOK"
                Click="btnOK_Click">
            <TextBlock Text="OK" />
        </Button>
    </StackPanel>
</Window>
